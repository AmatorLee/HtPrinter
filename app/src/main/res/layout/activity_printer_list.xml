<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_printer_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/icon_back">

        <TextView
            android:textSize="16sp"
            android:text="@string/printer"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

    <com.amator.htprinter.refreshRecyclerView.RefreshRecyclerView
        android:id="@+id/refresh_printer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:load_more_enable="false"
        app:refresh_enable="true"></com.amator.htprinter.refreshRecyclerView.RefreshRecyclerView>

</LinearLayout>